{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "typeRoots": ["./types"],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./components/*"],
      "@scanner/*": ["./components/scanner/*"],
      "@library/*": ["./components/library/*"],
      "@book/*": ["./components/book/*"],
      "@helpers/*": ["./helpers/*"],
      "@reduxStates/*": ["./reduxStates/*"],
      "@styles/*": ["./styles/*"],
      "@assets/*": ["./assets/*"]
    }
  }
}
